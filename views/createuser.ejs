                     <button  style="width:180"class="button is-success is-outlined"type='submit'>Submit</button>
                 </div>
                 <div class="col aligncenter">
                    <button  style="width:180"class="button is-success is-outlined"type='reset'>Reset</button>
                 </div>        
                </div>
 
               </form>
